# Server Configuration
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb+srv://<Username>:<Password>@meadowgorepaircluster.k3kyddx.mongodb.net/?retryWrites=true&w=majority&appName=MeadowGoRepairCluster

# JWT
WT_SECRET=your_jwt_secret_key_here
ACCESS_TOKEN_SECRET=your_jwt_access_secret_here
REFRESH_TOKEN_SECRET=your_jwt_refresh_secret_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=GoRepair <noreply@gorepair.com>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173


# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# File Uploads
MAX_FILE_UPLOAD=5 # MB
FILE_UPLOAD_PATH=./public/uploads

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret


# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=/api/auth/google/callback

